<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textScaleX="1"
        android:text="Registrieren"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textScaleX="1"
        android:text="Email"
        android:id="@+id/Registrieren_Eamiltextview"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Registrieren_inEmail"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:foreground="#ffffff"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textScaleX="1"
        android:text="Passwort"
        android:id="@+id/Registrieren_passtextview"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Registrieren_pass"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:foreground="#ffffff"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textScaleX="1"
        android:text="Passwort wiederholen"
        android:id="@+id/Registrieren_passWiederholen"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Registrieren_inPassWiederholen"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:foreground="#ffffff"/>
    <Button
        android:id="@+id/Registrieren_angry_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Registrieren"
        android:textColor="#000000"
        android:textSize="40px"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />


</LinearLayout>